---
import ModalBeneficios from "./modalBeneficios.astro";
const { title, icon: Icon, description } = Astro.props;
const modalId = `modal-${Math.random().toString(36).slice(2, 9)}`;
---

<article
  class="h-[80%] md:h-[100%] flex w-[100%] m-auto flex-col items-center text-center gap-2 sm:gap-6 p-3 md:p-6 rounded-3xl bg-white/90 shadow-sm transition-all duration-300 ease-in-out
         hover:-translate-y-1 hover:shadow-md
                border border-white/30 px-6"
>
  <div
    class="flex items-center justify-center w-14 h-14 rounded-lg bg-transparent"
  >
    {(<Icon class="w-7 h-7 lg:w-9 lg:h-9  text-red-700" />)}
  </div>

  <h3 class="text-lg md:text-base lg:text-lg font-semibold text-slate-800">
    {title}
  </h3>
  <button
    type="button"
    class="inline-flex items-center text-red-700 text-sm px-1 md:px-4 py-2 rounded-lg transition-colors hover:cursor-pointer"
    aria-haspopup="dialog"
    aria-controls={modalId}
    data-modal-open={modalId}
  >
    Ver m√°s
  </button>
</article>
<ModalBeneficios id={modalId} title={title}>
  <div class="space-y-3">
    <p class="text-sm text-slate-700">{description}</p>
  </div>
</ModalBeneficios>
