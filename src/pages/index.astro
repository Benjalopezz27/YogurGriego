---
import Layout from "../layouts/Layout.astro";
import FondoContacto from "../assets/FondoContacto.webp";
import "../global.css";
import SectionContainer from "../components/SectionContainer.astro";
import Carousel from "../components/Carousel.astro";
import Contact from "../components/Contact/Contact.astro";
import Header from "../components/Header/header.astro";
import Beneficios from "../components/Benefits/beneficios.astro";
import Recipes from "../components/Recipes/Recipes.astro";
import FondoRecetas from "../assets/FondoRecetas.webp";
import FondoBeneficios from "../assets/FondoBeneficios.webp";
---

<Layout>
  <main>
    <section id="inicio" class="w-full">
      <Header />
      <Carousel class="w-full" />
    </section>

    <div
      data-reveal
      class="bg-cover bg-center bg-no-repeat"
      style={`background-image: url(${FondoBeneficios.src});`}
    >
      <SectionContainer>
        <Beneficios />
      </SectionContainer>
    </div>
    <div
      class="bg-cover bg-center bg-no-repeat"
      style={`background-image: url(${FondoRecetas.src});`}
    >
      <SectionContainer>
        <Recipes />
      </SectionContainer>
    </div>
    <div
      class="bg-cover bg-center bg-no-repeat"
      style={`background-image: url(${FondoContacto.src});`}
    >
      <SectionContainer id="contacto" class="pt-10">
        <Contact />
      </SectionContainer>
    </div>
  </main>
</Layout>
