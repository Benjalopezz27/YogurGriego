---
import "@fontsource-variable/onest";
import ScrollToTop from "../components/ScrollToTop.astro";
import Footer from "../components/Footer.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta
      name="description"
      content="Descubre los beneficios del yogur griego natural, recetas fáciles y saludables, y por qué es el aliado perfecto para tu bienestar."
    />
    <meta
      name="keywords"
      content="yogur griego, beneficios, recetas saludables, probióticos, alimentación natural, comprar yogur griego, dieta equilibrada"
    />
    <link rel="icon" type="image/svg+xml" href="../assets/logo.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Yogur Griego</title>
  </head>
  <body>
    <slot />
    <Footer />
    <ScrollToTop />
    <script
      is:inline
      src="https://cdn.jsdelivr.net/npm/flowbite@3.1.2/dist/flowbite.min.js"
    ></script>
  </body>
</html>

<style>
  html {
    font-family: "Onest Variable", sans-serif;
    box-sizing: border-box;
    width: 100%;
    height: 100%;
    margin: 0;
    scroll-behavior: smooth;
  }

  body {
    color: rgb(46, 46, 46);
    margin: 0;
    width: 100%;
    height: 100%;
  }
</style>
