---
import "../../src/global.css";
import "../global.css";
---

<header
  class="flex justify-center items-center bg-orange-50 border-b-gray-300 py-3 sm:py-5 md:py-8 w-full mx-auto px-6 sticky top-0 z-50"
>
  <button
    id="menuToggle"
    class="xl:hidden text-gray-700 hover:text-red-400 transition-colors duration-200"
  >
    â˜°
  </button>
  <nav
    id="nav-menu"
    class="absolute top-[60px] left-0 w-full flex flex-col bg-orange-50 items-center gap-y-4 py-6
           transform scale-y-0 opacity-0 transition-all duration-300 origin-top
           xl:static xl:opacity-100 xl:scale-y-100 xl:flex-row xl:gap-x-10 xl:py-0 xl:w-auto"
  >
    <a href="#inicio" class="nav-link">Inicio</a>
    <a href="#beneficios" class="nav-link">Beneficios</a>
    <a href="#recetas" class="nav-link">Recetas</a>
    <a href="#contacto" class="nav-link">Contacto</a>
  </nav>
</header>
<script>
  const toggle = document.getElementById("menuToggle");
  const nav = document.getElementById("nav-menu");

  if (toggle && nav) {
    toggle.addEventListener("click", () => {
      nav.classList.toggle("scale-y-0");
      nav.classList.toggle("opacity-0");
      nav.classList.toggle("scale-y-100");
      nav.classList.toggle("opacity-100");
    });
  }
</script>
